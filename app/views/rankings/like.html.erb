<div class="row">
  <h1>好きなアイドルランキング</hi>
    <% @idols.each_with_index do |idol, index| %>
      <div class="idol">
        <div class="col-md-3 col-sm-4 col-xs-12">
          
          <div class="panel panel-default">
            <div class="panel-heading">
              <p class="text-center"><%= index+1 %>位</p>
            </div>
            <div class="panel-image text-center">
              <%= image_tag idol.idol_image.thumb.to_s %>
            </div>
            <div class="panel-body">
              <p class="idol-name"><%= link_to idol.idol_name, idol %></p>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'thoughts/like_button', idol: idol %>
                  <%= render 'thoughts/go_to_went_button', idol: idol %>
                <% end %>
              </div>
            </div>
            <div class="panel-footer">
              <p class="text-center"><%= @ranking_counts[idol.id] %> 人が好き</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

